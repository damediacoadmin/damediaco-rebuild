---
import { Target, Code, MessageSquare, Zap } from 'lucide-react';

const principles = [
  {
    icon: Target,
    title: 'Quality Over Speed',
    description: 'I build it right the first time. No shortcuts, no technical debt.',
  },
  {
    icon: Code,
    title: 'Clean, Maintainable Code',
    description: '20+ years means I know how to write code that lasts and scales.',
  },
  {
    icon: MessageSquare,
    title: 'Direct Communication',
    description: 'You work with me directly. No project managers, no middlemen.',
  },
  {
    icon: Zap,
    title: 'Experience = Efficiency',
    description: 'Two decades of solving problems means I ship faster than junior devs.',
  },
];
---

<section class="py-8 md:py-12 relative">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold font-display mb-4">
        <span class="text-white">How I</span>
        <span class="text-gradient"> Work</span>
      </h2>
      <p class="text-lg text-slate-400 max-w-2xl mx-auto">
        20+ years building for the web has taught me what actually matters.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
      {principles.map((principle, i) => (
        <div 
          class="glass-card p-8 hover:border-amber-500/40 transition-all duration-300"
          style={`animation-delay: ${i * 100}ms`}
        >
          <principle.icon className="w-10 h-10 text-amber-400 mb-4" />
          <h3 class="text-xl font-semibold text-white mb-3">{principle.title}</h3>
          <p class="text-slate-400 leading-relaxed">{principle.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
