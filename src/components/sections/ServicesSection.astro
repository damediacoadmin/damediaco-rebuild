---
import { 
  Code2, 
  Globe, 
  ShoppingCart, 
  Plug, 
  Zap, 
  HeartHandshake 
} from 'lucide-react';

const services = [
  {
    icon: Code2,
    title: 'Custom Development',
    description: 'Tailored web applications built from scratch to meet your specific business needs and requirements.',
    features: ['Full-Stack Development', 'Database Design', 'API Development'],
    bgImage: '/services/custom-development.jpg',
  },
  {
    icon: Globe,
    title: 'Web Apps',
    description: 'Modern, responsive web applications with seamless user experiences and powerful functionality.',
    features: ['React & Next.js', 'Progressive Web Apps', 'SPA Development'],
    bgImage: '/services/web-apps.jpg',
  },
  {
    icon: ShoppingCart,
    title: 'E-commerce',
    description: 'High-converting online stores that turn visitors into customers with smooth checkout experiences.',
    features: ['Shopify & WooCommerce', 'Payment Integration', 'Inventory Management'],
    bgImage: '/services/ecommerce.jpg',
  },
  {
    icon: Plug,
    title: 'API Integration',
    description: 'Connect your systems with third-party services to automate workflows and extend functionality.',
    features: ['RESTful APIs', 'GraphQL', 'Third-party Services'],
    bgImage: '/services/api-integration.jpg',
  },
  {
    icon: Zap,
    title: 'Performance Optimization',
    description: 'Speed up your existing site with code refactoring, caching strategies, and CDN implementation.',
    features: ['Core Web Vitals', 'Lazy Loading', 'Database Optimization'],
    bgImage: '/services/performance.jpg',
  },
  {
    icon: HeartHandshake,
    title: 'Maintenance & Support',
    description: 'Ongoing care for your digital products with updates, security patches, and feature additions.',
    features: ['Regular Updates', 'Security Monitoring', '24/7 Support'],
    bgImage: '/services/support.jpg',
  },
];
---

<section id="services" class="py-10 lg:py-14 relative">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="badge mb-4">What I Do</span>
      <h2 class="text-3xl lg:text-4xl xl:text-5xl font-bold font-display text-white mb-6">
        Services That Drive <span class="text-gradient">Results</span>
      </h2>
      <p class="text-lg text-slate-300">
        From concept to deployment, I provide end-to-end development services that help businesses thrive online.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service, index) => (
        <div class="group glass-card rounded-2xl p-8 hover:border-teal-500/30 transition-all duration-300 hover:-translate-y-2 service-card overflow-hidden relative" data-index={index}>
          <!-- Background Image -->
          <div class="absolute inset-0 opacity-10 group-hover:opacity-20 transition-opacity duration-300">
            <img 
              src={service.bgImage} 
              alt="" 
              class="w-full h-full object-cover"
            />
          </div>
          
          <!-- Content -->
          <div class="relative z-10">
          <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-to-br from-teal-500/20 to-teal-600/10 text-teal-400 mb-6 group-hover:scale-110 group-hover:shadow-lg group-hover:shadow-teal-500/20 transition-all duration-300">
            <service.icon class="w-7 h-7" />
          </div>
          <h3 class="text-xl font-bold font-display text-white mb-3 group-hover:text-teal-400 transition-colors">
            {service.title}
          </h3>
          <p class="text-slate-400 mb-6 leading-relaxed">
            {service.description}
          </p>
          <ul class="space-y-2">
            {service.features.map(feature => (
              <li class="flex items-center gap-2 text-sm text-slate-300">
                <span class="w-1.5 h-1.5 rounded-full bg-teal-500"></span>
                {feature}
              </li>
            ))}
          </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .service-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .service-card:nth-child(1) { animation-delay: 0.1s; }
  .service-card:nth-child(2) { animation-delay: 0.15s; }
  .service-card:nth-child(3) { animation-delay: 0.2s; }
  .service-card:nth-child(4) { animation-delay: 0.25s; }
  .service-card:nth-child(5) { animation-delay: 0.3s; }
  .service-card:nth-child(6) { animation-delay: 0.35s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
