---
import { Mail, MessageSquare, Send } from 'lucide-react';
---

<section id="contact" class="py-8 md:py-12 relative">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold font-display mb-4">
        <span class="text-white">Let's</span>
        <span class="text-gradient"> Build Something</span>
      </h2>
      <p class="text-lg text-slate-400 max-w-2xl mx-auto">
        Have a project in mind? Let's talk about how I can help bring it to life.
      </p>
    </div>
    
    <!-- Calendly Inline Embed -->
    <div class="max-w-4xl mx-auto mb-16">
      <div class="glass-card p-4">
        <!-- Calendly inline widget begin -->
        <div class="calendly-inline-widget" data-url="https://calendly.com/millerd79/30min?hide_event_type_details=1&hide_gdpr_banner=1&background_color=1e293b&text_color=ffffff&primary_color=14b8a6" style="min-width:320px;height:700px;"></div>
        <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
        <!-- Calendly inline widget end -->
      </div>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-12 max-w-5xl mx-auto">
      <!-- Contact Form -->
      <div class="glass-card p-8">
        <div id="form-message" class="hidden mb-6 p-4 rounded-lg"></div>
        <form id="contact-form" class="space-y-6" action="/api/contact" method="POST">
          <!-- Honeypot -->
          <input type="text" name="website" class="hidden" tabindex="-1" autocomplete="off" />
          
          <div>
            <label for="name" class="block text-sm font-medium text-slate-300 mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white placeholder-slate-500 focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition"
              placeholder="Your name"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-slate-300 mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white placeholder-slate-500 focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition"
              placeholder="your@email.com"
            />
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium text-slate-300 mb-2">Phone (Optional)</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white placeholder-slate-500 focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition"
              placeholder="+1 (555) 123-4567"
            />
          </div>
          
          <div>
            <label for="businessType" class="block text-sm font-medium text-slate-300 mb-2">Business Type</label>
            <input
              type="text"
              id="businessType"
              name="businessType"
              class="w-full px-4 py-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white placeholder-slate-500 focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition"
              placeholder="E-commerce, SaaS, Local Business, etc."
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-slate-300 mb-2">Project Details</label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full px-4 py-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white placeholder-slate-500 focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition resize-none"
              placeholder="Tell me about your project..."
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="btn-primary w-full flex items-center justify-center gap-2"
          >
            Send Message
            <Send className="w-4 h-4" />
          </button>
        </form>
      </div>
      
      <!-- Contact Info -->
      <div class="space-y-6">
        <div class="glass-card p-8">
          <Mail className="w-8 h-8 text-teal-400 mb-4" />
          <h3 class="text-xl font-semibold text-white mb-2">Direct Email</h3>
          <p class="text-slate-400 mb-3">Prefer email? Reach out directly:</p>
          <a href="mailto:hello@damediaco.com" class="text-teal-400 hover:text-teal-300 font-medium">
            hello@damediaco.com
          </a>
        </div>
        
        <div class="glass-card p-8">
          <MessageSquare className="w-8 h-8 text-teal-400 mb-4" />
          <h3 class="text-xl font-semibold text-white mb-2">Phone</h3>
          <p class="text-slate-400 mb-3">Prefer to call?</p>
          <a href="tel:+19545900333" class="text-teal-400 hover:text-teal-300 font-medium">
            +1 (954) 590-0333
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.getElementById('contact-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);
    const messageDiv = document.getElementById('form-message');
    const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    
    if (!messageDiv || !submitBtn) return;
    
    // Disable submit button
    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';
    
    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        body: formData
      });
      
      const data = await response.json();
      
      if (data.success) {
        messageDiv.className = 'mb-6 p-4 rounded-lg bg-teal-500/10 border border-teal-500/30 text-teal-400';
        messageDiv.textContent = data.message;
        messageDiv.classList.remove('hidden');
        form.reset();
      } else {
        throw new Error(data.error || 'Failed to send message');
      }
    } catch (error) {
      messageDiv.className = 'mb-6 p-4 rounded-lg bg-red-500/10 border border-red-500/30 text-red-400';
      messageDiv.textContent = 'Failed to send message. Please try emailing directly.';
      messageDiv.classList.remove('hidden');
    } finally {
      submitBtn.disabled = false;
      submitBtn.innerHTML = 'Send Message <svg class="w-4 h-4 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>';
    }
  });
</script>
