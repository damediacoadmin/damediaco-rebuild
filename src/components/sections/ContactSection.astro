---
import { Mail, MessageSquare, Send, Github, Linkedin, Twitter } from 'lucide-react';
---

<section id="contact" class="py-16 md:py-24 relative">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold font-display mb-4">
        <span class="text-white">Let's</span>
        <span class="text-gradient"> Build Something</span>
      </h2>
      <p class="text-lg text-slate-400 max-w-2xl mx-auto">
        Have a project in mind? Let's talk about how I can help bring it to life.
      </p>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-12 max-w-5xl mx-auto">
      <!-- Contact Form -->
      <div class="glass-card p-8">
        <form class="space-y-6" action="/api/contact" method="POST">
          <!-- Honeypot -->
          <input type="text" name="website" class="hidden" tabindex="-1" autocomplete="off" />
          
          <div>
            <label for="name" class="block text-sm font-medium text-slate-300 mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white placeholder-slate-500 focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition"
              placeholder="Your name"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-slate-300 mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white placeholder-slate-500 focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition"
              placeholder="your@email.com"
            />
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium text-slate-300 mb-2">Phone (Optional)</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white placeholder-slate-500 focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition"
              placeholder="+1 (555) 123-4567"
            />
          </div>
          
          <div>
            <label for="businessType" class="block text-sm font-medium text-slate-300 mb-2">Business Type</label>
            <input
              type="text"
              id="businessType"
              name="businessType"
              class="w-full px-4 py-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white placeholder-slate-500 focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition"
              placeholder="E-commerce, SaaS, Local Business, etc."
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-slate-300 mb-2">Project Details</label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full px-4 py-3 rounded-lg bg-slate-900/50 border border-slate-700 text-white placeholder-slate-500 focus:outline-none focus:border-teal-500 focus:ring-1 focus:ring-teal-500 transition resize-none"
              placeholder="Tell me about your project..."
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="btn-primary w-full flex items-center justify-center gap-2"
          >
            Send Message
            <Send className="w-4 h-4" />
          </button>
        </form>
      </div>
      
      <!-- Contact Info -->
      <div class="space-y-6">
        <div class="glass-card p-8">
          <Mail className="w-8 h-8 text-teal-400 mb-4" />
          <h3 class="text-xl font-semibold text-white mb-2">Direct Email</h3>
          <p class="text-slate-400 mb-3">Prefer email? Reach out directly:</p>
          <a href="mailto:hello@damediaco.com" class="text-teal-400 hover:text-teal-300 font-medium">
            hello@damediaco.com
          </a>
        </div>
        
        <div class="glass-card p-8">
          <MessageSquare className="w-8 h-8 text-teal-400 mb-4" />
          <h3 class="text-xl font-semibold text-white mb-2">Quick Chat</h3>
          <p class="text-slate-400 mb-3">Want to schedule a call? Calendly booking available for free consultations.</p>
          <p class="text-sm text-slate-500 italic">Contact for scheduling link</p>
        </div>
        
        <div class="glass-card p-8">
          <h3 class="text-xl font-semibold text-white mb-4">Connect</h3>
          <div class="flex gap-4">
            <a href="https://github.com/damediacoadmin" target="_blank" rel="noopener noreferrer" class="w-12 h-12 rounded-lg bg-slate-800/50 border border-slate-700 flex items-center justify-center hover:border-teal-500/40 hover:bg-slate-800 transition-all">
              <Github className="w-5 h-5 text-slate-300" />
            </a>
            <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="w-12 h-12 rounded-lg bg-slate-800/50 border border-slate-700 flex items-center justify-center hover:border-teal-500/40 hover:bg-slate-800 transition-all">
              <Linkedin className="w-5 h-5 text-slate-300" />
            </a>
            <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="w-12 h-12 rounded-lg bg-slate-800/50 border border-slate-700 flex items-center justify-center hover:border-teal-500/40 hover:bg-slate-800 transition-all">
              <Twitter className="w-5 h-5 text-slate-300" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
