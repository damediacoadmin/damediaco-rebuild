---
const reviews = [
  {
    name: "Raffaela Daubenmire",
    initials: "R",
    color: "bg-pink-600",
    reviews: "1 review",
    weeks: "a week ago",
    text: "Working with David was completely stress free. Quick text responses, clear updates, and a fantastic mobile-responsive website. Perfect for remote clients.",
    link: "https://www.google.com/maps/contrib/117137800520701264374/reviews",
  },
  {
    name: "Sylvester Jackson",
    initials: "S",
    color: "bg-orange-600",
    reviews: "13 reviews · 2 photos",
    weeks: "3 weeks ago",
    text: "David delivered an outstanding remote experience. Communication via text and phone was seamless and the modern clean website was finished ahead of schedule. Highly recommend.",
    link: "https://www.google.com/maps/contrib/100811784346107984596/reviews",
  },
  {
    name: "Michael Giannetto",
    initials: "M",
    color: "bg-purple-600",
    reviews: "4 reviews",
    weeks: "2 weeks ago",
    text: "David understood my vision perfectly through email and phone calls. The final site exceeded expectations and was great value for the price!",
    link: "https://www.google.com/maps/contrib/103864522696970673262/reviews",
  },
  {
    name: "Celeste Soto",
    initials: "C",
    color: "bg-blue-600",
    reviews: "11 reviews · 7 photos",
    weeks: "3 weeks ago",
    text: "David is amazing. He helped completely redesign my website. I'm already converting more sales. 10 out of 10!",
    link: "https://www.google.com/maps/contrib/104579719951048797962/reviews",
  },
];
---

<section id="testimonials" class="py-8 md:py-12 relative">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold font-display mb-4">
        <span class="text-white">Google</span>
        <span class="text-gradient"> Reviews</span>
      </h2>
      <a 
        href="https://www.google.com/maps/place/DAMedia+Co/@26.2710715,-80.184783,13z/data=!4m6!3m5!1s0x6b35b1ab389847a1:0x228d04efab4e75c5!8m2!3d26.2710714!4d-80.184783!16s%2Fg%2F11ysh5ps3_?entry=ttu"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-lg text-slate-300 hover:text-teal-400 transition-colors"
      >
        <span class="text-3xl font-bold text-white">5.0</span>
        <div class="flex text-yellow-400">
          <span>★★★★★</span>
        </div>
        <span class="text-slate-400">4 reviews</span>
      </a>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6 max-w-6xl mx-auto">
      {reviews.map((review, i) => (
        <a 
          href={review.link}
          target="_blank"
          rel="noopener noreferrer"
          class="glass-card p-6 hover:border-teal-500/30 transition-all duration-300 group"
          style={`animation-delay: ${i * 100}ms`}
        >
          <div class="flex items-start gap-4">
            <!-- Avatar -->
            <div class={`w-10 h-10 rounded-full ${review.color} flex items-center justify-center text-white font-semibold flex-shrink-0`}>
              {review.initials}
            </div>
            
            <!-- Content -->
            <div class="flex-1 min-w-0">
              <!-- Name and Meta -->
              <div class="mb-2">
                <h3 class="text-white font-medium group-hover:text-teal-400 transition-colors">{review.name}</h3>
                <p class="text-xs text-slate-500">{review.reviews}</p>
              </div>
              
              <!-- Rating and Date -->
              <div class="flex items-center gap-2 mb-3">
                <div class="flex text-yellow-400 text-sm">
                  ★★★★★
                </div>
                <span class="text-xs text-slate-400">{review.weeks}</span>
                <span class="px-2 py-0.5 bg-slate-700 text-white text-xs rounded font-medium">NEW</span>
              </div>
              
              <!-- Review Text -->
              <p class="text-slate-300 text-sm leading-relaxed">
                {review.text}
              </p>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <div class="text-center mt-8">
      <a 
        href="https://www.google.com/maps/place/DAMedia+Co/@26.2710715,-80.184783,13z/data=!4m6!3m5!1s0x6b35b1ab389847a1:0x228d04efab4e75c5!8m2!3d26.2710714!4d-80.184783!16s%2Fg%2F11ysh5ps3_?entry=ttu&g_ep=EgoyMDI1MDExNS4wIKXMDSoASAFQAw%3D%3D"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary inline-flex items-center gap-2"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
        </svg>
        Leave a Review on Google
      </a>
    </div>
  </div>
</section>
