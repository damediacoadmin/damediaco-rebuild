---
import { Quote, Star } from 'lucide-react';

const testimonials = [
  {
    quote: "Working with David was completely stress free. Quick text responses, clear updates, and a fantastic mobile-responsive website. Perfect for remote clients.",
    author: "Raffaela Daubenmire",
    rating: 5,
    link: "https://www.google.com/maps/contrib/117137800520701264374/reviews",
  },
  {
    quote: "David delivered an outstanding remote experience. Communication via text and phone was seamless and the modern clean website was finished ahead of schedule. Highly recommend.",
    author: "Sylvester Jackson",
    rating: 5,
    link: "https://www.google.com/maps/contrib/100811784346107984596/reviews",
  },
];
---

<section id="testimonials" class="py-8 md:py-12 relative">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold font-display mb-4">
        <span class="text-white">Client</span>
        <span class="text-gradient"> Feedback</span>
      </h2>
      <p class="text-lg text-slate-400 max-w-2xl mx-auto">
        Real results from real clients
      </p>
    </div>
    
    <div class="text-center mb-8">
      <a 
        href="https://www.google.com/maps/place/DAMedia+Co/@26.2710715,-80.184783,13z/data=!4m6!3m5!1s0x6b35b1ab389847a1:0x228d04efab4e75c5!8m2!3d26.2710714!4d-80.184783!16s%2Fg%2F11ysh5ps3_?entry=ttu"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-teal-400 hover:text-teal-300 font-medium transition-colors"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
        </svg>
        View all reviews on Google (5.0 ★★★★★)
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6">
      {testimonials.map((testimonial, i) => (
        <div 
          class="glass-card p-8"
          style={`animation-delay: ${i * 100}ms`}
        >
          <div class="flex items-start justify-between mb-4">
            <Quote className="w-10 h-10 text-teal-400/20" />
            <div class="flex gap-1">
              {Array.from({ length: testimonial.rating }).map(() => (
                <Star className="w-4 h-4 fill-yellow-400 text-yellow-400" />
              ))}
            </div>
          </div>
          
          <p class="text-slate-300 leading-relaxed mb-6 italic">
            "{testimonial.quote}"
          </p>
          
          <a 
            href={testimonial.link} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-sm font-medium text-teal-400 hover:text-teal-300 transition-colors inline-flex items-center gap-1"
          >
            — {testimonial.author}
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
