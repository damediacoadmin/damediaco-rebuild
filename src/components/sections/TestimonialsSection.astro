---
import { Quote, Star } from 'lucide-react';

const testimonials = [
  {
    quote: "Working with David was completely stress free. Quick text responses, clear updates, and a fantastic mobile-responsive website. Perfect for remote clients.",
    author: "Raffaela Daubenmire",
    rating: 5,
  },
  {
    quote: "David delivered an outstanding remote experience. Communication via text and phone was seamless and the modern clean website was finished ahead of schedule. Highly recommend.",
    author: "Sylvester Jackson",
    rating: 5,
  },
];
---

<section id="testimonials" class="py-8 md:py-12 relative">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold font-display mb-4">
        <span class="text-white">Client</span>
        <span class="text-gradient"> Feedback</span>
      </h2>
      <p class="text-lg text-slate-400 max-w-2xl mx-auto">
        Real results from real clients
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6">
      {testimonials.map((testimonial, i) => (
        <div 
          class="glass-card p-8"
          style={`animation-delay: ${i * 100}ms`}
        >
          <div class="flex items-start justify-between mb-4">
            <Quote className="w-10 h-10 text-teal-400/20" />
            <div class="flex gap-1">
              {Array.from({ length: testimonial.rating }).map(() => (
                <Star className="w-4 h-4 fill-yellow-400 text-yellow-400" />
              ))}
            </div>
          </div>
          
          <p class="text-slate-300 leading-relaxed mb-6 italic">
            "{testimonial.quote}"
          </p>
          
          <p class="text-sm font-medium text-teal-400">
            â€” {testimonial.author}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
